@model T3_Llanos_Carlos.Models.Libro
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>
<form method="post" asp-action="Crear">

    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info  pl-3">Nuevo Libro</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Titulo" class="form-label">Titulo</label>
                    <input asp-for="Titulo" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Autor" class="form-label">Autor</label>
                    <input asp-for="Autor" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Tema" class="form-label">Tema</label>
                    <input asp-for="Tema" class="form-control" />
                </div>
            </div>


            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Editorial" class="form-label">Editorial</label>
                    <input asp-for="Editorial" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="AnioPublicacion" class="form-label">Año de Publicacion</label>
                    <input asp-for="AnioPublicacion" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Paginas" class="form-label">Paginas</label>
                    <input asp-for="Paginas" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Categoria" class="form-label">Categoria</label>
                    <input asp-for="Categoria" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Material" class="form-label">Material</label>
                    <input asp-for="Material" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Copias" class="form-label">Copias</label>
                    <input asp-for="Copias" class="form-control" />
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Crear nuevo</button>
                <a asp-controller="Distribuidor" asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </div>


    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}